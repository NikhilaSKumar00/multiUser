@model multiUser.Models.UserInsert
@{
    ViewBag.Title = "Insertuser_Pageload";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Insertuser_Pageload</h2>


<div>
    @using (Html.BeginForm("Insertuser_click", "UserReg", FormMethod.Post, new { enctype = "multipart/form-data" }))

    {
        <div><label>Name:</label></div>
        <div>
            @Html.TextBoxFor(m => m.name)
            @Html.ValidationMessageFor(m => m.name)
        </div>
        <div><label>Age:</label></div>
        <div>
            @Html.TextBoxFor(m => m.age)
            @Html.ValidationMessageFor(m => m.age)
        </div>


        <div><label>Address:</label></div>
        <div>
            @Html.TextAreaFor(m => m.address)
            @Html.ValidationMessageFor(m => m.address)

        </div>


        <div><label>Email:</label></div>
        <div>
            @Html.TextBoxFor(m => m.email)
            @Html.ValidationMessageFor(m => m.email)
        </div>

        <div><label>photo:</label></div>
        <div>
            @Html.TextBox("file", "", new {Type="file"})
            
        </div>


        <div><label>Username:</label></div>
        <div>
            @Html.TextBoxFor(m => m.username)

        </div>

        <div><label>Password:</label></div>
        <div>
            @Html.PasswordFor(m => m.pass)
        </div>


        <div><label>Confirm password:</label></div>
        <div>
            @Html.PasswordFor(m => m.cpassword)
            @Html.ValidationMessageFor(m => m.cpassword)
        </div>


        <div>
            <input type="submit" value="insert" />
            @Html.DisplayFor(m => m.usermsg)
        </div>
    }
</div>